<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pjz="http://schemas.android.com/apk/res/com.xyc.wyatt"
    xmlns:makeramen="http://schemas.android.com/apk/res/com.xyc.wyatt"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.xyc.wyatt.view.SlipView
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        pjz:padding_Right="80dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dip"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:clickable="true" >
					<!-- 头像 -->	
                    <com.xyc.wyatt.view.RoundedImageView
                        android:id="@+id/riv_avatar"
                        android:layout_width="38dip"
                        android:layout_height="38dip"
                        android:src="@drawable/avatar_default"
                        makeramen:riv_border_width="0dip"
                        makeramen:riv_corner_radius="100dip" />
                    <!-- 用户名 -->	
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@id/riv_avatar"
                        android:text="@string/username_default"
                        android:textColor="@color/wt_menu_text_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_training_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/iv_training_day"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:src="@drawable/wt_training_day_gray" />

                    <TextView
                        android:id="@+id/tv_training_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/iv_training_day"
                        android:text="@string/training_day"
                        android:textColor="@color/wt_menu_text_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_traininghistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip" >

                    <ImageView
                        android:id="@+id/iv_traininghistory"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:src="@drawable/wt_run_history_gray" />

                    <TextView
                        android:id="@+id/tv_traininghistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/iv_traininghistory"
                        android:text="@string/traininghistory"
                        android:textColor="@color/wt_menu_text_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_wyattcirle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip" >

                    <ImageView
                        android:id="@+id/iv_wyattcirle"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:src="@drawable/wt_wyatt_circle_gray" />

                    <TextView
                        android:id="@+id/tv_wyattcirle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/iv_wyattcirle"
                        android:text="@string/wyattcirle"
                        android:textColor="@color/wt_menu_text_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip" >

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:src="@drawable/wt_setting_gray" />

                    <TextView
                        android:id="@+id/tv_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/iv_setting"
                        android:text="@string/setting"
                        android:textColor="@color/wt_menu_text_gray" />
                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_content_overflay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </com.xyc.wyatt.view.SlipView>

</RelativeLayout>